<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:transitionName="detail"

    tools:context=".activity.DetailActivity">

    <include
        layout="@layout/toolbar2"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        />

    <TextView
        android:id="@+id/username"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"

        android:layout_below="@+id/toolbar"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/createdAt"
        android:layout_marginEnd="5dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="15dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:text="TextView" />

    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/username"
        android:layout_alignParentStart="true"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/heart"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@+id/photo"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"

        android:drawablePadding="5dp"

        tools:text="5" />
<!--    app:drawableLeftCompat="@drawable/heart_outline"-->


    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@+id/photo"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/heart"
        android:drawablePadding="5dp"
        app:drawableLeftCompat="@drawable/comment_outline"
        />

    <TextView
        android:id="@+id/share"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@+id/photo"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/comment"
        android:drawablePadding="5dp"
        app:drawableLeftCompat="@drawable/send1"
        />

    <TextView
        android:id="@+id/save"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@+id/photo"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="true"

        android:drawablePadding="5dp"
        app:drawableLeftCompat="@drawable/save"
        />

    <TextView
        android:id="@+id/description"
        android:layout_below="@+id/heart"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:text="TextView" />


</RelativeLayout>